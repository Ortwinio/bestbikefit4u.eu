{
  "name": "bikefit-ai",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm-run-all --parallel dev:frontend dev:backend:optional",
    "dev:frontend": "next dev",
    "dev:backend": "convex dev",
    "dev:backend:optional": "sh -c 'convex dev || { echo \"[warn] convex dev failed; continuing with frontend only.\"; exit 0; }'",
    "build": "next build",
    "build:vercel": "node scripts/check-vercel-env.mjs && next build",
    "start": "next start",
    "vercel:preflight": "node scripts/check-vercel-env.mjs",
    "lint": "npm-run-all lint:eslint lint:runtime-boundaries lint:tooltips",
    "lint:eslint": "eslint",
    "lint:runtime-boundaries": "node scripts/check-convex-runtime-boundaries.mjs",
    "lint:tooltips": "node scripts/check-tooltip-coverage.mjs",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run --exclude='**/*.contract.test.ts' --exclude='tests/e2e/**/*.e2e.test.ts'",
    "test:contracts": "vitest run contract.test.ts --bail=1",
    "test:e2e:communication": "vitest run convex-communication.e2e.test.ts --bail=1",
    "test:e2e:i18n": "vitest run tests/e2e/homepage-language-switch.e2e.test.ts --bail=1",
    "test:i18n": "vitest run src/i18n/config.test.ts src/i18n/getDictionary.test.ts src/i18n/messages/messages-parity.test.ts tests/integration/locale-routing.integration.test.ts --bail=1",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@auth/core": "^0.37.4",
    "@convex-dev/auth": "^0.0.90",
    "@hookform/resolvers": "^5.2.2",
    "clsx": "^2.1.1",
    "convex": "^1.31.7",
    "lucide-react": "^0.564.0",
    "next": "16.1.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-hook-form": "^7.71.1",
    "resend": "^6.9.2",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^4.0.18"
  }
}
