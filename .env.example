# Convex deployment identifier (used by Convex CLI commands)
CONVEX_DEPLOYMENT=your-team:your-deployment

# Public Convex endpoint used by Next.js client and server routes
NEXT_PUBLIC_CONVEX_URL=https://your-deployment.convex.cloud

# Public Convex site URL (used by Convex auth config fallback)
NEXT_PUBLIC_CONVEX_SITE_URL=https://your-deployment.convex.site

# Public site URL used by auth redirects/magic links
SITE_URL=https://your-domain.com

# Optional in local development; required in production for real email delivery
AUTH_RESEND_KEY=
AUTH_EMAIL_FROM=BikeFit AI <noreply@bikefit.ai>
